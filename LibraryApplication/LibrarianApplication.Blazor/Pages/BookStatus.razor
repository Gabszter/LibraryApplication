@page "/books/getbyid/{id:int}"
@using LibrarianApplication.Blazor.Model;
@using LibrarianApplication.Blazor.Services
@inject IBookService BookService
@inject NavigationManager NavigationManager

@if (Book is null)
{
    <p>Loading...</p>
}
else
{
    <h3>@Book.Title's status</h3>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Borrower</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Book.Title</td>
                <td>@Book.Status</td>
                <td>@Book.Borrower</td>
                <td>@Book.DueDate</td>
            </tr>
        </tbody>
    </table>

   <a href="books" class="btn btn-primary">Back to book list</a>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Book? Book { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Book = await BookService.GetBookByIdAsync(Id);
    }
}
